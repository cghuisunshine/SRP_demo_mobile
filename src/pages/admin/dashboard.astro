---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import { getEntry, render } from 'astro:content';
import { FileCheck, Building, Calendar, ArrowRight } from 'lucide-react';

const entry = await getEntry('company', 'admin-hub');
if (!entry) throw new Error('Could not find Admin Hub content');
const { Content } = await render(entry);
---

<DashboardLayout title="Admin Dashboard - SRP">
  <div class="space-y-8 animate-in fade-in duration-700">
    <header class="flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-black text-gray-900">{entry.data.dashboardTitle}</h1>
        <p class="text-gray-500">{entry.data.dashboardSubtitle}</p>
      </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {entry.data.quickActions.map((action) => (
        <a href={action.href} class="group p-6 bg-white border border-gray-100 rounded-2xl shadow-sm hover:border-[#6B8E5F]/50 transition-all">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-[#6B8E5F]/10 text-[#6B8E5F] rounded-xl group-hover:bg-[#6B8E5F] group-hover:text-white transition-colors">
               {action.label === 'Review Documents' && <FileCheck size={24} />}
               {action.label === 'Manage Stratas' && <Building size={24} />}
               {action.label === 'View Schedule' && <Calendar size={24} />}
            </div>
            <ArrowRight size={18} className="text-gray-300 group-hover:text-[#6B8E5F] transition-colors" />
          </div>
          <h3 class="font-bold text-lg text-gray-900">{action.label}</h3>
          <p class="text-xs text-gray-500 mt-1">Operational Task</p>
        </a>
      ))}
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="p-8 bg-white rounded-3xl border border-gray-100 shadow-sm">
            <h3 class="font-black text-xl mb-4">Internal Memo</h3>
            <div class="prose prose-sm text-gray-600">
                <Content />
            </div>
        </div>

        <div class="p-8 bg-[#6B8E5F]/5 border border-[#6B8E5F]/20 rounded-3xl">
            <h3 class="font-black text-xl mb-4 text-[#6B8E5F]">Approval Queue</h3>
            <p class="text-sm text-gray-600 mb-6">Staff must verify these mandatory documents before clients can schedule inspections.</p>
            <div class="space-y-3">
                <div class="flex items-center justify-between p-4 bg-white rounded-xl border border-gray-100">
                    <div class="font-bold text-sm">Insurance Policy - VIS 2345</div>
                    <button class="text-xs font-black uppercase text-[#6B8E5F] hover:underline">Review Now</button>
                </div>
                <div class="flex items-center justify-between p-4 bg-white rounded-xl border border-gray-100">
                    <div class="font-bold text-sm">Bylaws - NW 122</div>
                    <button class="text-xs font-black uppercase text-[#6B8E5F] hover:underline">Review Now</button>
                </div>
            </div>
        </div>
    </div>
  </div>
</DashboardLayout>
