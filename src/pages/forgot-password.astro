---
import BaseLayout from '@/layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Reset Password - SRP">
  <main class="min-h-screen bg-gray-50">
    <div class="max-w-3xl mx-auto px-6 py-12">
      <a class="text-sm font-bold text-[#6B8E5F] hover:underline" href={`${base}`}>‚Üê Back to Login</a>
      <h1 class="mt-6 text-4xl font-black text-gray-900">Reset Password</h1>
      <p class="mt-4 text-gray-600">
        Password reset is disabled in the demo. Use the Fast Pass buttons on the login page.
      </p>
    </div>
  </main>
</BaseLayout>
