---
import '../styles/globals.css';

const base = import.meta.env.BASE_URL;
const isDemo = import.meta.env.PUBLIC_DEMO_MODE === '1';

interface Props {
  title?: string | undefined;
}

const { title = 'Strata Reserve Planning' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Depreciation Report Portal for Strata Councils" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}_static/favicon.svg`} />
    <title>{title}</title>
  </head>
  <body>
    {isDemo && (
      <script>
        import { installMockApi } from '../lib/mockApi';
        installMockApi();
      </script>
    )}
    <slot />
  </body>
</html>
