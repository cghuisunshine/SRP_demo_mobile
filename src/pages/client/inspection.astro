---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import { InspectionScheduler } from '@/components/InspectionScheduler';
import { DataSync } from '@/components/DataSync';
---

<DashboardLayout title="Inspection Scheduling - Strata Reserve Planning">
  <DataSync client:only="react" />
  <div class="p-8">
    <div class="mb-8 max-w-5xl mx-auto">
        <a href="/client/dashboard" class="text-sm font-medium text-[#6B8E5F] hover:underline mb-2 block">‚Üê Back to Hub</a>
        <h1 class="text-4xl font-black text-gray-900 mb-2">Schedule Inspection</h1>
        <p class="text-lg text-gray-600">Please choose your preferred site visit dates. We conduct inspections on Fridays to ensure maximum efficiency.</p>
    </div>
    
    <InspectionScheduler client:only="react" />
  </div>
</DashboardLayout>
